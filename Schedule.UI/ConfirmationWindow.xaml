<Window x:Class="Schedule.UI.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Schedule.UI"
        mc:Ignorable="d"
        Title="ConfirmationWindow" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" TextAlignment="Center" Margin="10" FontSize="14" Grid.ColumnSpan="2">Are you sure you want to delete your account?</TextBlock>
        <Button Grid.Row="1" Grid.Column="0" Width="50" FontSize="12" Height="25" Margin="10" Click="Button_OK_Click">OK</Button>
        <Button Grid.Row="1" Grid.Column="1" Width="50" FontSize="12" Height="25" Margin="10" Click="Button_Cancel_Click">Cancel</Button>
    </Grid>
</Window>
